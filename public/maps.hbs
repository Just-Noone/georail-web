  <script>
    const iframeWrapper = document.getElementById('iframeWrapper');
    const slider = document.getElementById('slider');
    const mapBtn = document.getElementById('mapBtn');
    const systemBtn = document.getElementById('systemBtn');

    function updateUI(tab) {
      if (tab === 'map') {
        iframeWrapper.style.transform = 'translateX(0%)';
        slider.style.transform = 'translateX(0%)';
        mapBtn.classList.remove('inactive');
        systemBtn.classList.add('inactive');
      } else {
        iframeWrapper.style.transform = 'translateX(-50%)';
        slider.style.transform = 'translateX(100%)';
        systemBtn.classList.remove('inactive');
        mapBtn.classList.add('inactive');
      }
    }

    function switchTab(tab) {
      history.pushState({ tab }, '', '/' + tab);
      updateUI(tab);
    }

    // Handle browser back/forward
    window.addEventListener('popstate', (event) => {
      const tab = event.state?.tab || (location.pathname.includes('system') ? 'system' : 'map');
      updateUI(tab);
    });

    // On first load
    const initialTab = location.pathname.includes('system') ? 'system' : 'map';
    updateUI(initialTab);
    history.replaceState({ tab: initialTab }, '', '/' + initialTab);
  </script>
