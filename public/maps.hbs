  <!-- Floating Navigation Tabs -->
  <div class="tab-container">
    <div class="slider" id="slider"></div>
    <button id="mapBtn" class="tab-button" onclick="switchTab('map')">Map</button>
    <button id="systemBtn" class="tab-button inactive" onclick="switchTab('system')">System</button>
